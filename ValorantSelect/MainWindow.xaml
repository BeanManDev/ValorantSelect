<Window x:Class="ValorantSelect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValorantSelect"
        mc:Ignorable="d"
        FontFamily="/Fonts/#Valorant"
        Title="Valorant Select" Height="450" Width="800" Icon="/valornt.jpg" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF14131D">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <RadioButton x:Name="agents" Content="Agent Select" FlowDirection="RightToLeft" HorizontalAlignment="Left" Margin="175,0,0,0" VerticalAlignment="Center" Foreground="White" Height="15" Width="136" FontWeight="Normal" FontStyle="Normal" FontFamily="VALORANT"/>
        <RadioButton x:Name="weapons" Content="Weapon Select" HorizontalAlignment="Right" Margin="0,0,175,0" VerticalAlignment="Center" Foreground="White" Height="15" Width="136" FontFamily="VALORANT"/>
        <Button x:Name="select" Content="Select" Click="Button_Click" HorizontalAlignment="Center" Margin="0,0,0,50" VerticalAlignment="Bottom" Height="40" Width="107" ClickMode="Release" FontFamily="VALORANT" FontWeight="Bold" FontSize="16" FontStyle="Italic" Background="#7FDDDDDD"/>
    </Grid>
</Window>